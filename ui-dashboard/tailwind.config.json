{
  "$schema": "https://tailwindcss.com/schema.json",
  "theme": {
    "container": {
      "center": true,
      "padding": "1.5rem"
    },
    "extend": {
      "colors": {
        "brand": {
          "50": "#eef2ff",
          "100": "#e0e7ff",
          "200": "#c7d2fe",
          "300": "#a5b4fc",
          "400": "#818cf8",
          "500": "#6366f1",
          "600": "#4f46e5",
          "700": "#4338ca",
          "800": "#3730a3",
          "900": "#312e81"
        },
        "background": "#f8f9fa",
        "card": "#ffffff"
      },
      "fontFamily": {
        "sans": ["Inter", "ui-sans-serif", "system-ui"],
        "mono": ["JetBrains Mono", "ui-monospace"]
      },
      "borderRadius": {
        "xl": "1rem",
        "2xl": "1.5rem"
      },
      "boxShadow": {
        "card": "0 4px 18px rgba(0,0,0,0.07)",
        "soft": "0 2px 8px rgba(0,0,0,0.05)"
      },
      "spacing": {
        "128": "32rem",
        "144": "36rem"
      }
    }
  },
  "darkMode": "class",
  "plugins": {
    "typography": {},
    "forms": {},
    "lineClamp": {}
  }
}
